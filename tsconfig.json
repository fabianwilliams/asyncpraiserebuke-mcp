{
    "compilerOptions": {
      "target": "es2020",
      "module": "ESNext",
      "types": ["node"],
      "moduleResolution": "node",
      "outDir": "build",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
  }
  